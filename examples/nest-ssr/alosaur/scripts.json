{
    "$schema": "https://deno.land/x/denon@2.4.9/schema.json",
    "scripts": {
      "start": {
        "cmd": "deno run app.ts",
        "desc": "Run the platform backend",
        "allow": ["net", "read", "env", "run"],
        "unstable": false,
        "importMap": "imports.json",
        "tsconfig": "tsconfig.json",
        "watch": false
      },
      "watch": {
        "cmd": "deno run app.ts",
        "desc": "Run the platform backend",
        "allow": ["net", "read", "env", "run"],
        "unstable": false,
        "importMap": "imports.json",
        "tsconfig": "tsconfig.json",
        "watch": true
      },
      "health-checker": {
        "cmd": "deno run health-checker.ts",
        "desc": "Run the health checker to restart the app on a crash",
        "allow": ["net", "read", "env", "run"],
        "unstable": false,
        "importMap": "imports.json",
        "tsconfig": "tsconfig.json",
        "watch": true
      },
      "openapi": {
        "cmd": "deno run openapi.ts",
        "desc": "Generate openapi schema",
        "allow": ["read", "read"],
        "unstable": false,
        "importMap": "imports.json",
        "tsconfig": "tsconfig.lib.json",
        "watch": false
      }
    }
  }