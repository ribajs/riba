{
  "name": "@ribajs/webpack-serve",
  "version": "2.0.0-beta.8",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "description": "Simple webpack serve script",
  "bin": "dist/cjs/index.js",
  "main": "dist/cjs/index.js",
  "browser": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/esm/index.js",
  "source": "src/index.ts",
  "author": "Pascal Garber <pascal@artandcode.studio",
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "index.js"
  ],
  "scripts": {
    "build": "yarn run build:esm && yarn run build:cjs && yarn run build:types",
    "build:types": "tsc --project ./tsconfig.json --declaration true --emitDeclarationOnly --outDir dist/types",
    "build:esm": "tsc --project ./tsconfig.json --declaration false --module esnext --outDir dist/esm",
    "build:cjs": "tsc --project ./tsconfig.json --declaration false --module commonjs --outDir dist/cjs"
  },
  "dependencies": {
    "@ribajs/webpack-config": "workspace:^",
    "@types/node": "^18.16.0",
    "@types/yargs": "^17.0.24",
    "get-port": "^6.1.2",
    "pkg-dir": "^7.0.0",
    "typescript": "5.0.4",
    "webpack": "^5.80.0",
    "webpack-dev-server": "^4.13.3",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3"
  }
}
