{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"],
}
